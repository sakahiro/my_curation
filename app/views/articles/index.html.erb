<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Url</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hatenas.each do |hatena| %>
      <tr>
        <td><%= hatena.title %></td>
        <td><%= hatena.content %></td>
        <td><%= link_to('サイトを見る', hatena.url) %></td>
        <td><%= hatena.type %></td>
        <td><%= link_to 'Show', article_path(hatena) %></td>
        <td><%= link_to 'Edit', edit_article_path(hatena) %></td>
        <td><%= link_to 'Destroy', article_path(hatena), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  <tbody>
  <% @qiitas.each do |qiita| %>
      <tr>
        <td><%= qiita.title %></td>
        <td><%= qiita.content %></td>
        <td><%= link_to('サイトを見る', qiita.url) %></td>
        <td><%= qiita.type %></td>
        <td><%= link_to 'Show', article_path(qiita) %></td>
        <td><%= link_to 'Edit', edit_article_path(qiita) %></td>
        <td><%= link_to 'Destroy', article_path(qiita), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

